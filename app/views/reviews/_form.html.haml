= simple_form_for(@review) do |f|
  = f.error_notification

  .form-inputs
    .large-4.columns= f.association :player
    .large-8.columns= f.association :goal, collection: Goal.order(:id), label_method: :id_title
    .large-4.columns= f.input :interest, collection: INTEREST_OPTIONS
    .large-4.columns= f.input :clarity, collection: (0..5)
    .large-4.columns= f.input :relevance, collection: (0..5)
    .large-6.columns= f.input :difficulty_anticipated, collection: (0..5)
    .large-6.columns= f.input :difficulty_hindsight, collection: (0..5)
    .large-6.columns= f.input :comments_before, input_html: {rows: 4}
    .large-6.columns= f.input :comments_after, input_html: {rows: 4}

  .form-actions
    = f.button :submit
