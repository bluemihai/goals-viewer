= simple_form_for(@review) do |f|
  = f.error_notification

  .form-inputs
    .large-4.columns= f.association :player, autofocus: true
    .large-8.columns= f.association :goal, collection: Goal.order(:id), label_method: :id_title
    .large-4.columns= f.input :interest, collection: INTEREST_OPTIONS, label: 'How interested I am'
    .large-4.columns= f.input :clarity, collection: CLARITY_OPTIONS, label: 'Clarity of Specs'
    .large-4.columns= f.input :relevance, collection: RELEVANCE_OPTIONS, label: 'Relevant to full-stack js goal'
    .large-6.columns= f.input :difficulty_anticipated, collection: DIFFICULTY_OPTIONS
    .large-6.columns= f.input :difficulty_hindsight, collection: DIFFICULTY_OPTIONS
    .large-6.columns= f.input :comments_before, input_html: {rows: 4}
    .large-6.columns= f.input :comments_after, input_html: {rows: 4}

  .form-actions
    = f.button :submit
